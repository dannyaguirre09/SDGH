@model SysFloricola.Models.INGRESO_PRODUCCION

@{
	Layout = null;
}

<div class="flex" id="flex">
	<div class="contenido-modal" style="width: 650px; height:380px;">
		<div class="modal-Titulo flex">
			<h6 id="tituloModalCrear" class="text-white pt-2"></h6>
			<span class="cerrarModal" onclick="cerrarModal()" id="cerrarModal">&times;</span>
		</div>
		<div class="modal-Cuerpo">
			@using (Html.BeginForm("CrearIngresoProduccion", "IngresoProduccion", FormMethod.Post, new { onsubmit = "return validar()" }))
			{
				@Html.AntiForgeryToken()

				<div class="form-horizontal pl-3 pr-3">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => model.INPCODIGOI)
					@Html.HiddenFor(model => model.INPFECHA)
					<div style="display:block; position:relative; height:240px; overflow-y:auto; overflow-x:hidden">
						<div class="row">
							<div class="col-md-6 form-group">
								<label class="control-label">Seleccione el bloque</label>
								@Html.DropDownList("BLCCODIGOI", null, htmlAttributes: new { @class = "form-control" })
							</div>
							<div class="col-md-6 form-group">
								<label class="control-label">Seleccione la variedad</label>
								@Html.DropDownList("VRDCODIGOI", null, htmlAttributes: new { @class = "form-control" })
							</div>
						</div>
						<div class="row">
							<div class="col-md-6 form-group">
								<label class="control-label">Ingrese el número de malla</label>
								@Html.EditorFor(model => model.INPNUMMALLAS, new { htmlAttributes = new { @class = "form-control", @id = "txtNumeroMallas" } })
								<label id="numeroMallas" hidden class="text-danger control-label">Ingrese el número de malla</label>
							</div>
							<div class="col-md-6 form-group">
								<label class="control-label">Ingrese la cantidad de tallos</label>
								@Html.EditorFor(model => model.INPCANTIDADTALLOS, new { htmlAttributes = new { @class = "form-control", @id = "txtCantidad" } })
								<label id="cantidad" hidden class="text-danger control-label">Ingrese la cantidad de tallos</label>
							</div>
						</div>
					</div>
					<br />
					<div class="row">
						<div class="col-md-12" style="text-align:right">
							<input id="btnFormulario" type="submit" value="Guardar" class="btn btn-success" />
							<input onclick="cerrarModal()" type="button" value="Cancelar" class="btn btn-info" />
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>