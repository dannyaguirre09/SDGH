@model SysFloricola.Models.CONSULTAS
@{
	Layout = null;
}

<div class="flex" id="flex">
	<div class="contenido-modal" style="width: 400px; height:250px;">
		<div class="modal-Titulo flex">
			<h6 id="tituloModalCrear" class="text-white pt-2"></h6>
			<span class="cerrarModal" onclick="cerrarModal()" id="cerrarModal">&times;</span>
		</div>
		<div class="modal-Cuerpo">
			@using (Html.BeginForm("CrearMotivoConsulta", "Consulta", FormMethod.Post))
			{
				@Html.AntiForgeryToken()
				@Html.HiddenFor(x => x.CNSCODIGOI)
				if (@ViewBag.identificador == 1)
				{
					@Html.HiddenFor(x => x.CNSENFERMEDAD)
				}
				else
				{
					@Html.HiddenFor(x => x.CNSMOTIVO)
				}
				@Html.HiddenFor(x => x.CNSFECHA)
				@Html.HiddenFor(x => x.HSCCODIGOI)
				<input class="form-control" value="@ViewBag.numEmp" hidden name="numEmp" />
				<input class="form-control" value="@ViewBag.codHist" hidden name="codHist" />
				<div class="form-horizontal pl-3 pr-3">
					<div class="row">
						<div class="col-md-12">
							<label class="control-label">Ingrese la descripción</label>
							@if (@ViewBag.identificador == 1)
							{
								@Html.EditorFor(model => model.CNSMOTIVO, new { htmlAttributes = new { @class = "form-control", @id = "CNSMOTIVO",@required="required" } });
							}
							else
							{
								@Html.EditorFor(model => model.CNSENFERMEDAD, new { htmlAttributes = new { @class = "form-control", @id = "CNSENFERMEDAD", @required="required" } });
							}

							<label id="descripcion"  hidden class="text-danger control-label">Ingrese una Descripción</label>
						</div>
					</div>
				</div>
				<br />
				<div class="row">
					<div class="col-md-12" style="text-align:right">
						<input id="btnFormulario" type="submit" value="Guardar" class="btn btn-success" />
						<input onclick="cerrarModal()" type="button" value="Cancelar" class="btn btn-info" />
					</div>
				</div>
			}
		</div>
	</div>
</div>