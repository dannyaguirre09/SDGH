@model SysFloricola.Models.EMPLEADOS
@{
    Layout = null;
}

<div class="flex" id="flex">
	<div class="contenido-modal" style="width: 750px; height:480px;">
		<div class="modal-Titulo flex">
			<h6 id="tituloModalCrearEmpleado" class="text-white pt-2"></h6>
			<span class="cerrarModal" onclick="cerrarModal()" id="cerrarModal">&times;</span>
		</div>
		<div class="modal-Cuerpo">
			@using (Html.BeginForm("CrearEmpleado", "Empleados", FormMethod.Post, new { onsubmit = "return validar()" } ))
			{
				@Html.AntiForgeryToken()

				<div class="form-horizontal pl-3 pr-3">
					<div style="display:block; position:relative; height:350px; overflow-y:auto; overflow-x:hidden">
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						@Html.HiddenFor(model => model.EPLCODIGOI)
						<div class="row">
							<div class="col-md-6 form-group">
								<label class="control-label">Empresa</label>
								@Html.DropDownList("EMPCODIGOI", null, htmlAttributes: new { @class = "form-control" })
							</div>
							<div class="col-md-6">
								@Html.LabelFor(model => model.EPLCEDULA, htmlAttributes: new { @class = "control-label " })
								@Html.EditorFor(model => model.EPLCEDULA, new { htmlAttributes = new { @class = "form-control", @id = "txtCedula", @type = "number" } })
								<label id="cedula" hidden class="text-danger control-label">Ingrese la cédula</label>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6  pt-2">
								@Html.LabelFor(model => model.EPLAPELLIDOP, htmlAttributes: new { @class = "control-label " })
								@Html.EditorFor(model => model.EPLAPELLIDOP, new { htmlAttributes = new { @class = "form-control", @id = "txtApellido" } })
								<label id="apellido" hidden class="text-danger control-label">Ingrese el apellido paterno</label>
							</div>
							<div class="form-group col-md-6 pt-2">
								@Html.LabelFor(model => model.EPLAPELLIDOM, htmlAttributes: new { @class = "control-label " })
								@Html.EditorFor(model => model.EPLAPELLIDOM, new { htmlAttributes = new { @class = "form-control" } })
							</div>
						</div>
						<div class="row">
							<div class="col-md-6 pt-2">
								@Html.LabelFor(model => model.EPLNOMBRES, htmlAttributes: new { @class = "control-label" })
								@Html.EditorFor(model => model.EPLNOMBRES, new { htmlAttributes = new { @class = "form-control", @id = "txtNombre" } })
								<label id="nombre" hidden class="text-danger control-label">Ingrese el nombre</label>
							</div>
							<div class="col-md-6 pt-2">
								@Html.LabelFor(model => model.EPLDIRECCION, htmlAttributes: new { @class = "control-label" })
								@Html.EditorFor(model => model.EPLDIRECCION, new { htmlAttributes = new { @class = "form-control", @id = "txtDireccion" } })
								<label id="direccion" hidden class="text-danger control-label">Ingrese la dirección</label>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6 pt-2">
								@Html.LabelFor(model => model.EPLTELEFONO, htmlAttributes: new { @class = "control-label " })
								@Html.EditorFor(model => model.EPLTELEFONO, new { htmlAttributes = new { @class = "form-control" } })
							</div>
						</div>
					</div>
					<br />
					<div class="row">
						<div class="col-md-12" style="text-align:right">
							<input id="btnFormulario" type="submit" value="Guardar" class="btn btn-success" />
							<input onclick="cerrarModal()" type="button" value="Cancelar" class="btn btn-info" />
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
