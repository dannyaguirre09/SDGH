@model SysFloricola.Models.ESTADOS
@{
	Layout = null;
}

<div class="flex" id="flex">
	<div class="contenido-modal" style="width: 650px; height:280px;">
		<div class="modal-Titulo flex">
			<h6 id="tituloModalCrear" class="text-white pt-2"></h6>
			<span class="cerrarModal" onclick="cerrarModal()" id="cerrarModal">&times;</span>
		</div>
		<div class="modal-Cuerpo">
			@using (Html.BeginForm("CrearEstado", "Estados", FormMethod.Post, new { onsubmit = "return validar()" }))
			{
				@Html.AntiForgeryToken()

				<div class="form-horizontal pl-3 pr-3">
					<div style="display:block; position:relative; height:120px; overflow-y:auto; overflow-x:hidden">
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						@Html.HiddenFor(model => model.ESTCODIGOI)
						<div class="row">
							<div class="col-md-6">
								<label class="control-label">Ingrese el nombre del estado</label>
								@Html.EditorFor(model => model.ESTNOMBRE, new { htmlAttributes = new { @class = "form-control", @id = "txtNombre" } })
								<label id="nombre" hidden class="text-danger control-label">Ingrese el nombre del estado</label>
							</div>
							<div class="col-md-6 form-group">
								<label class="control-label">Seleccione el País</label>
								@Html.DropDownList("PAICODIGOI", null, htmlAttributes: new { @class = "form-control" })
							</div>
						</div>
					</div>
					<br />
					<div class="row">
						<div class="col-md-12" style="text-align:right">
							<input id="btnFormulario" type="submit" value="Guardar" class="btn btn-success" />
							<input onclick="cerrarModal()" type="button" value="Cancelar" class="btn btn-info" />
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
