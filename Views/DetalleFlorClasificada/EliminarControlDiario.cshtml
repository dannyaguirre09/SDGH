@model SysFloricola.Models.PROCESO_CLASIFICACION
@{
	Layout = null;
}

<div class="flex" id="flex">
	<div class="contenido-modal" style="width: 550px; height:180px;">
		<div class="modal-Titulo flex">
			<h6 id="tituloModalConfirmacion" class="text-white pt-2">Confirmar</h6>
			<span class="cerrarModal" onclick="cerrarModalConfirmacion()" id="cerrarModalConfirmacion">&times;</span>
		</div>
		<div class="modal-Cuerpo">
			@using (Html.BeginForm("EliminarControlDiario", "DetalleFlorClasificada", FormMethod.Post))
			{
				@Html.HiddenFor(x => x.PRCCODIGOI)
				@Html.HiddenFor(x => x.PRCESTADO)
				@Html.HiddenFor(x => x.PRCFECHA)
				@Html.HiddenFor(x => x.PRCOBSERVACION)
				@Html.HiddenFor(x => x.PCRIDENTIFICADOR)
				<h4 class="text-center">¿Está seguro que desea eliminar el Registro del @Model.PRCFECHA.ToShortDateString()?</h4>
				<br />
				<div class="row" style="text-align:center">
					<div class="col-md-12" style="text-align:right">
						<input type="submit" value="Eliminar" class="btn btn-danger" />
						<input onclick="cerrarModalConfirmacion()" type="button" value="Cancelar" class="btn btn-info" />
					</div>
				</div>
			}

		</div>
	</div>
</div>

