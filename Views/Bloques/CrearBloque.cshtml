@model SysFloricola.Models.BLOQUES
@{
	Layout = null;
}

<div class="flex" id="flex">
	<div class="contenido-modal" style="width: 750px; height:380px;">
		<div class="modal-Titulo flex">
			<h6 id="tituloModalCrear" class="text-white pt-2"></h6>
			<span class="cerrarModal" onclick="cerrarModal()" id="cerrarModal">&times;</span>
		</div>
		<div class="modal-Cuerpo">
			@using (Html.BeginForm("CrearBloque", "Bloques", FormMethod.Post, new { onsubmit = "return validar()" }))
			{
				@Html.AntiForgeryToken()

				<div class="form-horizontal pl-3 pr-3">
					<div style="display:block; position:relative; height:250px; overflow-y:auto; overflow-x:hidden">
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						@Html.HiddenFor(model => model.BLQCODIGOI)
						<div class="row">
							<div class="col-md-6 form-group">
								<label class="control-label">Seleccione la Finca</label>
								@Html.DropDownList("FNCCODIGOI", null, htmlAttributes: new { @class = "form-control" })
							</div>
							<div class="col-md-6">
								<label class="control-label">Identificación del Bloque</label>
								@Html.EditorFor(model => model.BLQIDENTIFIC, new { htmlAttributes = new { @class = "form-control", @id = "txtIdentifiacion" } })
								<label id="identificacion" hidden class="text-danger control-label">Ingrese la identifiación del bloque</label>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6 pt-2">
								<label class="control-label">Número de camas</label>
								@Html.EditorFor(model => model.BLQNUMCAMAS, new { htmlAttributes = new { @class = "form-control", @id = "txtNumero" } })
								<label id="numero" hidden class="text-danger control-label">Ingrese el número de camas</label>
							</div>

						</div>
					</div>
					<br />
					<div class="row">
						<div class="col-md-12" style="text-align:right">
							<input id="btnFormulario" type="submit" value="Guardar" class="btn btn-success" />
							<input onclick="cerrarModal()" type="button" value="Cancelar" class="btn btn-info" />
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
