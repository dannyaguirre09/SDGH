@model SysFloricola.Models.VARIEDADES
@{
	Layout = null;
}

<div class="flex" id="flex">
	<div class="contenido-modal" style="width: 600px; height:350px;">
		<div class="modal-Titulo flex">
			<h6 id="tituloModalCrear" class="text-white pt-2"></h6>
			<span class="cerrarModal" onclick="cerrarModal()" id="cerrarModal">&times;</span>
		</div>
		<div class="modal-Cuerpo">
			@using (Html.BeginForm("CrearVariedad", "Variedades", FormMethod.Post, new { onsubmit = "return validar()" }))
			{
				@Html.AntiForgeryToken()

				<div class="form-horizontal pl-3 pr-3">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => model.VRDCODIGOI)
					<div class="row">
						<div class="col-md-6">
							<label class="control-label">Identificación</label>
							@Html.EditorFor(model => model.VRDIDENTIFIC, new { htmlAttributes = new { @class = "form-control", @id = "txtIdentificacion" } })
							<label id="identificacion" hidden class="text-danger control-label">Ingrese una Identificación</label>
						</div>
						<div class="col-md-6">
							<label class="control-label">Nombre</label>
							@Html.EditorFor(model => model.VRDNOMBREC, new { htmlAttributes = new { @class = "form-control", @id = "txtNombre" } })
							<label id="nombre" hidden class="text-danger control-label">Ingrese el nombre</label>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<label class="control-label">Color</label>
							@Html.EditorFor(model => model.VRDCOLOR, new { htmlAttributes = new { @class = "form-control", @id = "txtColor" } })
							<label id="color" hidden class="text-danger control-label">Ingrese el color</label>
						</div>
					</div>
				</div>
				<br />
				<div class="row">
					<div class="col-md-12" style="text-align:right">
						<input id="btnFormulario" type="submit" value="Guardar" class="btn btn-success" />
						<input onclick="cerrarModal()" type="button" value="Cancelar" class="btn btn-info" />
					</div>
				</div>
			}
		</div>
	</div>
</div>

