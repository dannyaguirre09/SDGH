@model List<SysFloricola.Models.DAO.SignosVitales>

@{
	ViewBag.Title = "Signos Vitales";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/EstilosModal.css" rel="stylesheet" />
<link href="~/Content/jquery.dataTables.css" rel="stylesheet" />

<h2 class="text-center">Signos Vitales</h2>


<div class="row pt-2 pb-4">
	<div class=" pl-5 pr-5 col-md-5 text-center">@Html.Partial("~/Views/Shared/_Flash.cshtml")</div> <br />

	<div class="container  pt-0">
		<ul class="nav nav-tabs bar_tabs" role="tablist">
			<li class="nav-item"><a href="/Paciente">Lista Pacientes</a></li>
			<li class="nav-item"><a href="/HistoriaClinica/Filiacion?numEmp=@ViewBag.numEmp&codHist=@ViewBag.codHist">Filiación</a></li>
			<li class="nav-item"><a href="/Consulta/Consulta?numEmp=@ViewBag.numEmp&codHist=@ViewBag.codHist">Consulta</a></li>
			<li class="nav-item"><a href="/Antecedentes/Antecedentes?numEmp=@ViewBag.numEmp&codHist=@ViewBag.codHist">Antecedentes</a></li>
			<li class="nav-item" style="background-color:#2A3F54; color:white">
				<a class="nav-item" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="antecedentes" aria-selected="true">Signos Vitales</a>
			</li>			
			<li class="nav-item"><a href="/ExamenFisico/ExamenFisico?numEmp=@ViewBag.numEmp&codHist=@ViewBag.codHist">Exámenes Físicos</a></li>
			<li class="nav-item"><a href="/Diagnostico/Diagnostico?numEmp=@ViewBag.numEmp&codHist=@ViewBag.codHist">Diagnóstico</a></li>
			<li class="nav-item"><a href="/Planes?numEmp=@ViewBag.numEmp&codHist=@ViewBag.codHist">Planes</a></li>
		</ul>
	</div>

	@*Tabla Motivos ----------------------------------------------------------------------------------------------------------*@

	<div class="col-md-12 pl-5 pr-5 pt-3 " style="text-align:left">
		<div class="x_panel pt-0 mt-0">
			<input type="text" value="@ViewBag.numEmp" id="numEmp" hidden />
			<input type="text" value="@ViewBag.codHist" id="codHist" hidden />
			<div class="x_title pt-0">
				<h2>Signos VItales</h2>
				<ul class="nav navbar-right panel_toolbox">
					<li>
						<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
					</li>
				</ul>
				<div class="clearfix"></div>
			</div>
			<div class="x_content">
				@using (Html.BeginForm("GuardarSignosVitales", "SignosVitales", FormMethod.Post))
				{
					<input type="text" value="@ViewBag.codHist" name="codHistoria" hidden />
					<input type="text" value="@ViewBag.numEmp" name="numEmp" hidden />
					for (int i = 0; i < Model.Count; i++)
					{
						@Html.Hidden("obj[" + @i + "].HSVCODIGOI", Model[i].HSVCODIGOI)
						@Html.Hidden("obj[" + @i + "].HSCCODIGOI", Model[i].HSCCODIGOI)
						@Html.Hidden("obj[" + @i + "].SGVCODIGOI", Model[i].SGVCODIGOI)
						<div class="col-md-3 pt-3">
							<label style="color:black">@Model[i].SGVDESCRIPCION</label>
							@Html.TextBox("obj[" + @i + "].HSVVALORES", Model[i].HSVVALORES, new { @type = "number", @step="0.01", @class = "form-control" })
						</div>
					}
					
						<div class="col-md-12">
							<div class="row">
								<div class="col-md-3 pt-3">
									<button type="submit" class="btn btn-success">Guardar</button>
								</div>
							</div>
						</div>					
					
				}

			</div>
		</div>
	</div>
	<br /><br />

	@*Tabla Enfermedades ----------------------------------------------------------------------------------------------------------*@





	@*Botones----------------------------------------------------------------------------------------------------------*@


</div>

<div class="row pr-5 ">
	<div class="col-md-12" style="text-align:right">
		<a href="/ExamenFisico/ExamenFisico?numEmp=@ViewBag.numEmp&codHist=@ViewBag.codHist" class="btn btn-success text-white">
			Siguiente <i class="fa fa-arrow-circle-right"></i>
		</a>
	</div>
</div>

<script src="~/Scripts/Scripts/ScriptSignosVitales.js"></script>