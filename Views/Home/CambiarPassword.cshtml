
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Iniciar Sesión | </title>

	<link href="~/Vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<!-- Font Awesome -->
	<link href="~/Vendors/fontawesome/css/font-awesome.min.css" rel="stylesheet" />
	<!-- NProgress -->
	<link href="~/Vendors/nprogress/nprogress.css" rel="stylesheet" />

	<link href="~/Vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" />

	<link href="~/Vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />

	<!-- Custom Theme Style -->
	<link href="~/Content/css/custom.min.css" rel="stylesheet" />


	<link href="~/Content/css/EstilosLogin.css" rel="stylesheet" />

</head>
<body class="login fondoLogin">
	<div>
		<a class="hiddenanchor" id="signup"></a>
		<a class="hiddenanchor" id="signin"></a>
		<div class="login_wrapper">
			<div class="animate  login_form">
				<section >
					<form method="post" action="~/Home/CambiarPassword" onsubmit="return validar()">
						<h3 style="color:white">Cambiar Contraseña</h3>
						<div class="form-group pt-3">
							<label style="color:white">Nueva Contraseña</label>
							<input type="password" name="nuevoPassword" id="txtUsuario" class="form-control" style="color:black"  />
						</div>
						<div>
							<label hidden id="labelUsuario" style="color:red; font-size:15px;">Ingrese una contraseña</label>
						</div>
						<div>
							<label style="color:white">Repetir Contraseña</label>
							<input type="password" name="password" id="txtPassword" class="form-control" style="color:black"  />
						</div>
						<div>
							<label hidden id="labelPassword" style="color:red; font-size:15px;">Confirme la contraseña</label>
						</div>
						<div>
							<label hidden id="labelCoincidir" style="color:red; font-size:15px;">Las contraseñas no coinciden</label>
						</div>
						@Html.Partial("~/Views/Shared/_Flash.cshtml")
						<div class="row pt-4">
							<div class="col-md-12">
								<input  type="submit" class="btn btn-success btn-block" value="Cambiar Contraseña" />
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="separator">
							<div class="clearfix"></div>
							<br />
							<div>
								<p>@DateTime.Now.Year All Rights Reserved</p>
							</div>
						</div>
					</form>
				</section>
			</div>

		</div>
	</div>
	<script src="~/Scripts/jquery-3.4.1.min.js"></script>
	<script>
		$(document).ready(function () {
			$('.alert').fadeIn();
			setTimeout(function () {
				$(".alert").fadeOut();
			}, 5000);
		});
	
		function validar() {
			var txtUsuario = $('#txtUsuario').val();
			var txtPassword= $('#txtPassword').val();
			if (txtUsuario.trim() == "") {
				var elemento = document.getElementById("labelUsuario");
				elemento.hidden = false;
				return false;
			}
			else if (txtPassword.trim() == "") {
				var elemento = document.getElementById("labelPassword");
				elemento.hidden = false;
				return false;
			} else if (txtPassword.trim() !== txtUsuario.trim()) {
				var elemento = document.getElementById("labelCoincidir");
				elemento.hidden = false;
				var pass = document.getElementById("txtUsuario"); 
				pass.value = '';
				var conf = document.getElementById("txtPassword");
				conf.value = '';
				return false;
			}
			
		}

	</script>
</body>
</html>
