@model IEnumerable<SysFloricola.Models.TIPOS_EXAMENES_FISICOS>
@{
	ViewBag.Title = "Tipo Examen Físico";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/EstilosModal.css" rel="stylesheet" />
<link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
<h2 class="text-center">Administración de Tipos de exámenes físicos</h2>

<div class="row pt-2 pb-4">
	<div class=" pl-5 pr-5 col-md-5 text-center">@Html.Partial("~/Views/Shared/_Flash.cshtml")</div> <br />
	<div class="col-md-12 pr-5" style="text-align:right">
		<a onclick="abrirModal(0)" style="cursor: pointer;" class="action-item text-black-50 " data-toggle="tooltip" title="Crear Tipo de examen físico">
			<i class="fa fa-plus text-success" style="font-size: 16px;"></i> Crear Tipo de examen físico
		</a>
	</div>
</div>

<div class="row pt-2">
	<div class="col-md-12 pl-5 pr-5" style="text-align:center">
		<table class="table table-cards table-responsive-lg" id="tabla">
			<thead style="background-color: #2A3F54" class="text-white">
				<tr>
					<th scope="col">
						Código
					</th>
					<th scope="col">
						Descripción
					</th>
					<th scope="col">Acciones</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.TPFCODIGOI)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.TPFDESCRIPCION)
						</td>
						<td class="text-center">
							<div class="actions ml-3">
								<a onclick="abrirModal(@item.TPFCODIGOI)" style="cursor: pointer; font-size:14px;" class="action-item mr-2 text-info" data-toggle="tooltip" title="Editar Tipo Examen Físico">
									<i class="fa fa-edit"></i>
								</a>
								<a onclick="abrirModalEliminar(@item.TPFCODIGOI)" style="cursor: pointer; font-size:14px;" class="action-item text-danger mr-2" data-toggle="tooltip" title="Eliminar Tipo Examen Físicoe">
									<i class="fa fa-trash"></i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
<div class="myModal" id="modalCrear" name="modalCrear"></div>
<div class="myModal" id="modalEliminar" name="modalEliminar"></div>

@section Scripts {
	<script src="~/Scripts/jquery.dataTables.js"></script>
	<script src="~/Scripts/Scripts/ScriptTipoExamenFisico.js"></script>
}