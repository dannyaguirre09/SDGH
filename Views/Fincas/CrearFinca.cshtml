@model SysFloricola.Models.FINCAS
@{
	Layout = null;
}

<div class="flex" id="flex">
	<div class="contenido-modal" style="width: 750px; height:380px;">
		<div class="modal-Titulo flex">
			<h6 id="tituloModalCrearFinca" class="text-white pt-2"></h6>
			<span class="cerrarModal" onclick="cerrarModal()" id="cerrarModal">&times;</span>
		</div>
		<div class="modal-Cuerpo">
			@using (Html.BeginForm("CrearFinca", "Fincas", FormMethod.Post, new { onsubmit = "return validar()" }))
			{
				@Html.AntiForgeryToken()

				<div class="form-horizontal pl-3 pr-3">
					<div style="display:block; position:relative; height:250px; overflow-y:auto; overflow-x:hidden">
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						@Html.HiddenFor(model => model.FNCCODIGOI)
						<div class="row">
							<div class="col-md-6 form-group">
								<label class="control-label">Empresa</label>
								@Html.DropDownList("EMPCODIGOI", null, htmlAttributes: new { @class = "form-control" })
							</div>
							<div class="col-md-6">
								@Html.LabelFor(model => model.FNCNOMBREC, htmlAttributes: new { @class = "control-label " })
								@Html.EditorFor(model => model.FNCNOMBREC, new { htmlAttributes = new { @class = "form-control", @id = "txtNombre" } })
								<label id="nombre" hidden class="text-danger control-label">Ingrese el nombre de la finca</label>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12 pt-2">
								@Html.LabelFor(model => model.FNCDIRECCION, htmlAttributes: new { @class = "control-label" })
								@Html.TextAreaFor(model => model.FNCDIRECCION,  new { @class = "form-control", @id = "txtDireccion" } )
								<label id="direccion" hidden class="text-danger control-label">Ingrese la dirección</label>
							</div>
							
						</div>
					</div>
					<br />
					<div class="row">
						<div class="col-md-12" style="text-align:right">
							<input id="btnFormulario" type="submit" value="Guardar" class="btn btn-success" />
							<input onclick="cerrarModal()" type="button" value="Cancelar" class="btn btn-info" />
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
